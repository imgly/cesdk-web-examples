{
  "name": "my-nextjs-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:local": "CESDK_USE_LOCAL=true NEXT_PUBLIC_CESDK_USE_LOCAL=true next dev --turbopack",
    "build": "NODE_ENV=production next build",
    "build:local": "NODE_ENV=production CESDK_USE_LOCAL=true next build",
    "start": "next start",
    "lint": "next lint",
    "check:syntax": "tsc --project tsconfig.base.json --noEmit",
    "check:format": "prettier --check \"**/*.{ts,js,json,html}\"",
    "check:lint": "eslint \"**/*.{ts,js}\"",
    "check:all": "npm run check:syntax && npm run check:format && npm run check:lint",
    "fix:format": "prettier --write \"**/*.{ts,js,json,html}\"",
    "fix:lint": "eslint --fix \"**/*.{ts,js}\"",
    "fix:all": "npm run fix:format && npm run fix:lint",
    "prebuild": "npm run check:all",
    "test": "exit 0",
    "qa": "npm run build && npm run test",
    "qa:local": "npm run build:local && npm run test",
    "ci": "npm run qa:local",
    "postinstall": "npm run tsconfig:local || true",
    "tsconfig:local": "node ../shared/scripts/generate-local-tsconfig.mjs || node scripts/generate-empty-tsconfig-local.mjs"
  },
  "dependencies": {
    "@cesdk/engine": "latest",
    "next": "^16.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^24.7.2",
    "@types/react": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.0",
    "tailwindcss": "^4",
    "typescript": "^5.0.0"
  }
}
