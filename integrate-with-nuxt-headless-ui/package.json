{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "build:local": "CESDK_USE_LOCAL=true nuxt build",
    "dev": "nuxt dev",
    "dev:local": "CESDK_USE_LOCAL=true nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "npm run tsconfig:local || true",
    "check:syntax": "echo \"TypeScript check handled by Nuxt build\"",
    "check:format": "prettier --check \"**/*.{ts,js,json,html}\"",
    "check:lint": "eslint \"pages/**/*.{ts,js,vue}\" \"components/**/*.{ts,js,vue}\" \"app.vue\" --max-warnings=0 || true",
    "check:all": "npm run check:syntax && npm run check:format && npm run check:lint",
    "fix:format": "prettier --write \"**/*.{ts,js,json,html}\"",
    "fix:lint": "eslint --fix \"pages/**/*.{ts,js,vue}\" \"components/**/*.{ts,js,vue}\" \"app.vue\" || true",
    "fix:all": "npm run fix:format && npm run fix:lint",
    "prebuild": "npm run check:all",
    "test": "exit 0",
    "qa": "npm run build && npm run test",
    "qa:local": "npm run build:local && npm run test",
    "ci": "npm run qa:local",
    "tsconfig:local": "node ../shared/scripts/generate-local-tsconfig.mjs || node scripts/generate-empty-tsconfig-local.mjs"
  },
  "dependencies": {
    "@cesdk/engine": "latest",
    "nuxt": "^3.16.2",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  }
}
