{
  "compilerOptions": {
    "types": ["vite/client"],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": "."
  },
  "include": ["src/**/*", "*.ts", "*.js"],
  "exclude": ["node_modules", "dist", "build", "vite.config.ts"]
}
