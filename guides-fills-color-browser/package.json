{
  "name": "guides-fills-color-browser",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "secrets": "bash scripts/setup-secrets.sh",
    "dev": "vite",
    "prebuild": "npm run check:all",
    "build": "vite build",
    "preview": "vite preview",
    "check:syntax": "tsc --noEmit",
    "check:format": "prettier --check \"**/*.{ts,js,json,html}\"",
    "check:lint": "eslint \"**/*.{ts,js}\"",
    "check:all": "npm run check:syntax && npm run check:format && npm run check:lint",
    "fix:format": "prettier --write \"**/*.{ts,js,json,html}\"",
    "fix:lint": "eslint --fix \"**/*.{ts,js}\"",
    "fix:all": "npm run fix:format && npm run fix:lint",
    "test:unit": "exit 0",
    "test:integration": "exit 0",
    "test:component": "exit 0",
    "test:e2e": "exit 0",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:component && npm run test:e2e",
    "qa": "npm run check:all && npm run test:all && npm run build",
    "capture:hero_image": "node scripts/capture-hero.mjs"
  },
  "dependencies": {
    "@cesdk/cesdk-js": "^1.62.0-rc.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "eslint-plugin-deprecation": "^3.0.0",
    "eslint-plugin-jsdoc": "^46.0.0",
    "playwright": "^1.55.1",
    "prettier": "^3.0.0",
    "sharp": "^0.34.4",
    "typescript": "^5.0.0",
    "vite": "^6.0.3"
  }
}
